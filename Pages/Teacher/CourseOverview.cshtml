@page
@model CourseOverviewModel
@inject UserService userService;
@{
    ViewData["Title"] = "Course Overview";
}
<h4 class="text-center">Courses</h4>
<form asp-page-handler="ChangeCourse" method="post">
    <select asp-for="Course.Id" class="form-control" onchange="this.form.submit()">
        @foreach (var course in Model.Courses)
        {
            <option value="@course.Id">@course.Name</option>
        }
    </select>
</form>

<div class="text-center">
    <h4>Change course group size</h4>
    <form asp-page-handler="ChangeGroupSize" method="post">
        <input asp-for="Course.GroupSize" class="form-control" type="number" min="2" max="20" />
        <input asp-for="Course.Id" hidden />
        <button class="btn btn-primary">Submit</button>
    </form>

    <form asp-page-handler="ChangeCustomGroupSize" method="post">
        <label asp-for="AllowCustomSize">Allow Custom Group Sizes?</label>
        <input asp-for="Course.Id" hidden />
        <input asp-for="AllowCustomSize" class="form-check-input" onchange="this.form.submit()" />
    </form>

    @if (Model.CourseDiscordServer == null)
    {
        <form asp-page="@TeacherRoutes.AddServer()" asp-route-CourseId="@Model.Course.Id" method="get">
            <input name="CourseId" value="@Model.Course.Id" hidden />
            <button class="btn btn-primary">Add Discord Server</button>
        </form>
    }
    else
    {
        <p>Discord Server connected (@Model.CourseDiscordServer.Name)</p>
    }

    <h4>Groups</h4>
    @if (Model.Groups.Count() == 0)
    {
        <p>No groups formed in this course</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Course</th>
                    <th>Members</th>
                    <th>Complete</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var group in Model.Groups)
                {
                    <tr>
                        <td>@group.Id</td>
                        <td>@group.Course.Name</td>
                        <td>
                            @foreach (var member in group.Members)
                            {
                                <p>@await userService.GetName(member)</p>
                            }
                        </td>
                        <td>
                            <p>@group.Members.Count / @group.GroupLimit</p>
                        </td>
                        <td>
                            <form asp-page-handler="DeleteGroup" asp-route-groupId="@group.Id" method="post">
                                <input asp-for="Course.Id" hidden />

                                <a asp-page="@TeacherRoutes.EditGroup()" asp-route-groupId="@group.Id"
                                    class="btn btn-primary"><i class="bi-pencil"></i></a>

                                <a asp-page="@TeacherRoutes.SplitGroup()" asp-route-groupId="@group.Id"
                                    class="btn btn-warning"><i class="bi-slash"></i></a>

                                <button class="btn btn-danger">
                                    <i class="bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
