@page
@model Admin.MatchmakingOverviewModel
@inject UserService userService;
@{
    ViewData["Title"] = "Students";
}
<div class="text-center">
    <h1 class="display-4">Matchmaking queue</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Course</th>
                <th>Availability</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model.Students)
            {
                <tr>
                    <td>@await userService.GetName(ticket.User)</td>
                    <td>@ticket.Course.Name</td>
                    <td>@ticket.Preferences.Availability</td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <form asp-page-handler="Match" method="post">
            <button class="btn btn-primary">FORCE MATCHMAKING</button>
        </form>
    </div>
    <h1 class="display-4">Groups</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Course</th>
                <th>Members</th>
                <th>Complete</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var group in Model.Groups)
            {
                <tr>
                    <td title="@group.Id">@group.Name</td>
                    <td>@group.Course.Name</td>
                    <td>
                        @foreach (var member in group.Members)
                        {
                            <p>@await userService.GetName(member)</p>
                        }
                    </td>
                    <td>
                        <p>@group.Members.Count / @group.GroupLimit</p>
                    </td>
                    <td>
                        <form asp-page-handler="DeleteGroup" asp-route-groupId="@group.Id" method="post">
                            <a asp-page="@TeacherRoutes.EditGroup()" asp-route-groupId="@group.Id"
                                class="btn btn-primary"><i class="bi-pencil"></i></a>
                            <button class="btn btn-danger">
                                <i class="bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Course in Model.Courses)
            {
                <tr>
                    <td>@Course.Name</td>
                    <td>
                        <form asp-page-handler="ResetCourse" method="post">
                            <input hidden name="CourseId" value="@Course.Id" />
                            <button class="btn btn-primary">RESET</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
